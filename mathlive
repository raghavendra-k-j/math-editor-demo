<body>
    <h1>ðŸ§® MathLive Demo</h1>
    <p>Type a math expression below:</p>

    <!-- MathLive Input Field -->
    <math-field id="mathInput">f(x) =</math-field>

    <!-- Button to Get LaTeX -->
    <button onclick="showLatex()">Get LaTeX</button>

    <!-- Display LaTeX Output -->
    <p class="output">LaTeX: <span id="latexOutput"></span></p>

    <script>
        function showLatex() {
            const mathField = document.getElementById("mathInput");
            const latexOutput = document.getElementById("latexOutput");

            // Get the LaTeX from MathLive
            latexOutput.textContent = mathField.value;
        }
    </script>
